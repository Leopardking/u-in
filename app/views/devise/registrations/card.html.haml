.col-md-6.col-md-offset-3.col-md-6.col-md-offset-3
  = form_errors!(@card)
  #edit-profile-page.well.form-border.form-custom
    = form_for(@card, url: auth_card_path(@card), html: { method: :put }) do |f|
      .row
        .col-md-8.col-md-offset-2
          .form-group
            = f.label :ccard_last4, t("devise.registrations.edit.card_number")
            = f.text_field :ccard_last4, class: "form-control", required: true,readonly: true, value: "xxxxxxxxxxxx#{@card.ccard_last4}"
          .form-group
            = f.label t("devise.registrations.edit.stripe_token")
            = f.text_field :stripe_profile_token, class: "form-control", required: true, readonly: true
          .form-group
            = f.label t("devise.registrations.edit.customer_id")
            = f.text_field :customer_id, class: "form-control", required: true,  readonly: true
          .form-group
            = f.label :street_address, t("devise.registrations.edit.street_address_label")
            = f.text_field :street_address, class: "form-control", required: true, readonly: true
          .form-group
            .row
              .col-md-6.col-sm-6
                = f.label :first_name, t("devise.registrations.edit.first_name_label")
                = f.text_field :first_name, class: "form-control", required: true, readonly: true
              .col-md-6.col-sm-6
                = f.label :last_name, t("devise.registrations.edit.last_name_label")
                = f.text_field :last_name, class: "form-control", required: true, readonly: true
          .form-group
            .row
              .col-md-6.col-sm-6
                = f.label :city,t("devise.registrations.edit.city_label")
                = f.text_field :city, class: "form-control", required: true, readonly: true
              .col-md-6.col-sm-6
                = f.label :state, t("devise.registrations.edit.state_label")
                = f.text_field :state, class: "form-control", required: true, readonly: true
          .form-group
            .row
              .col-md-6
                = f.label :zipcode, t("devise.registrations.edit.zipcode_label")
                = f.text_field :zipcode, class: "form-control", required: true, readonly: true
              .col-md-6
                = f.label t("devise.registrations.edit.card_type")
                = f.text_field :card_type, class: "form-control", required: true, readonly: true
          .form-group
            = t("devise.registrations.edit.always_use")
            = f.check_box :always_use
          %p.text-center
            = f.submit t("common.update"), class: "btn btn-default"
