#wraper_change_pass.col-md-6.col-md-offset-3.col-xs-8.col-xs-offset-2
  = form_errors!(resource)
  .row
    #edit-profile-page.form-custom
      = form_for(resource,  as: resource_name, url: registration_path(resource_name), html: { method: :put, id: "new_user" }) do |f|
        .row
          .col-md-8.col-md-offset-2.col-xs-8.col-xs-offset-2
            .form-group
              = f.label :password, t("devise.registrations.change_password.password_label")
              = f.password_field :password, class: "form-control", autocomplete: false, autofocus: true
            .form-group
              = f.label :password_confirmation, t("devise.registrations.change_password.password_confirmation_label")
              = f.password_field :password_confirmation, class: "form-control", autocomplete: false
            .form-group
              = f.label :current_password, t("devise.registrations.change_password.current_password_label")
              = f.password_field :current_password, class: "form-control"
            %p.text-center
              = f.submit t("common.update"), class: "btn btn-default"
