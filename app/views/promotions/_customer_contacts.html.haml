.col-md-6.col-md-offset-3.col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2
  .row
    %h4= t(".customer_this_b_msg")
  .row
    -@customer_info.each do |cus|
      .row.form-group
        .col-md-1.m-g-t-8.col-xs-1
          = check_box_tag "cus_id_check_#{cus.id}", cus.id, false, class: "cus_check", "data-email" => cus.email
        .col-md-6.col-xs-6
          - if cus.name.blank?
            %h5
              %strong No Name
          - else
            %h5
              %strong= cus.name
          = cus.email
  .row.text-center
    = paginate @customer_info, remote: true
