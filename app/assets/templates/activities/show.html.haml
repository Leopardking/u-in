#reviewModal.modal.fade{"aria-labelledby" => "reviewModal", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4#myModalLabel.modal-title THANKS FOR RATING YOUR EXPEIENCE!!!
      %form{"ng-submit"=>"submitForm()"}
        .modal-body
          .wrap-content-rate
            .col-md-4
              / %img{:height => "42", :src => "{{promotionhash.image}}", :width => "42"}
              .img-rating
                =image_tag "banner-img-3.jpg"
            .col-md-8
              %h3 {{promotionhash.promotion.name}}
              %ng-rate-it{"ng-model" => "reviewParam.rating", "resetable"=> "false", "ng-init"=> "reviewParam.rating= 2.5"}
          .col-md-12
            .wrap-comment
              %span
                Comments:
              %textarea{ :cols => "50", :rows => "4", :name => "check", "ng-model" => "reviewParam.content"}
        .modal-footer
          %button.btn.btn-primary.btn-submit{:type => "submit"} SUBMIT


