.wrapper-header
  %header
    .title-header
      .container
        .row
          .col-md-12.col-lg-12
            %h1
              are you in
              %span ?

    %ul#slider4.rslides{"data-slider-class-selector" => "rslides", "data-slider-refresh-on-watch" => "images", :slider => ""}
      %li{"ng-repeat" => "image in promotionhash.images", "ng-if"=>"image.length>= 1"}
        %img{:height => "42", :src => "{{image}}", :width => "42", "onError"=>"this.onerror=null;this.src='/assets/banner-img-1.jpg'"}
      
      %li{"ng-if"=>"image.length==0"}
        =image_tag "banner-img-1.jpg"
      %li{"ng-if"=>"image.length==0"}
        =image_tag "banner-img-2.jpg"
      %li{"ng-if"=>"image.length==0"}
        =image_tag "banner-img-3.jpg"


    .button-bottom-header
      %a.btn-activity{:href => "javascript:void(0)"} Find An Activity
      .arrow-bottom-header
        %a.first.scroll-down{:href => "javascript:void(0)"}
          =image_tag "Slider_Arrowdown_LG.png", id: "arrow"

%ul#myTab.nav.nav-tabs
  %li.active
    %a{"data-target" => "#overview", "data-toggle" => "tab", "class" => "tabs-mod"} Overview
  %li
    %a{"data-target" => "#reveiw", "data-toggle" => "tab", "class" => "tabs-mod"} Reviews
  %li
    %a{"data-target" => "#booking", "data-toggle" => "tab", "class" => "tabs-mod"} Book It


.tab-content
  #overview.tab-pane.active
    .container
      .row
        .col-md-12.col-lg-12
          %h3.text-center {{promotionhash.promotion.name}}
          .col-md-2
            %div.w3-card-12{:style => "width:50%"}
              %img{:alt => "Norway", :src => "http://dummyimage.com/140x140/000/fff.png&text=test", :style => "width:100%"}/
              .w3-container.w3-center
                %p Image Title

          .col-md-10
            .col-md-12
              .col-md-4
                %p Ratings
                %br
                %p 3
              .col-md-2
                %p Reviews
                %br
                %p 3
              .col-md-2
                %p Spaces
                %br
                %p {{promotionhash.space}}
              .col-md-2
                %p Discount
                %br
                %p {{promotionhash.promotion.discount_percent}}
              .col-md-2
                %p Price From
                %br
                %p {{promotionhash.promotion.discount_price}}

            .panel-group
              .panel.panel-default
                .panel-heading
                  %h4.panel-title
                    %a{"data-toggle" => "collapse", :href => "!#desc"} Description
                #desc.panel-collapse.collapse
                  .panel-body {{promotionhash.promotion.description}}

            .panel-group
              .panel.panel-default
                .panel-heading
                  %h4.panel-title
                    %a{"data-toggle" => "collapse", :href => "!#share"} Share & Book Together
