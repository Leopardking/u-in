    .col-md-12.col-lg-12
      .wrapper-choose-distance
        .text-distance
          Choose Your Distance
        .sliding
          %input{:max => "10000", :min => "0", :step => "1", :type => "range", :value => "0"}
        .text-range
          .value
            %span 0
          %span mi

    .col-md-12.col-lg-12
      .wrapper-table-activity
        .head-activity
          .left
            .column
              .my-location
                %h4.hidden-xs My Location
                %i.fa.fa-map-marker.visible-xs.fa-2x{"aria-hidden" => "true"}
            .column
              .share
                %h4.hidden-xs
                  Share
                  %br
                  Activities
                %i.fa.fa-share-alt.visible-xs.fa-2x{"aria-hidden" => "true"}
            .column
              .bookmark
                %h4.hidden-xs
                  Bookmark
                  %br
                  Activities
                %i.fa.fa-bookmark.visible-xs.fa-2x{"aria-hidden" => "true"}
            .column
              .most-popular
                %h4.hidden-xs Most Popular
                %i.fa.fa-star.visible-xs.fa-2x{"aria-hidden" => "true"}
          .right
            .column
              .off
                %h4.hidden-xs % Off
                %i.fa.fa-percent.visible-xs.fa-2x{"aria-hidden" => "true"}
            .column
              .prices
                %h4.hidden-xs
                  Prices
                  %br
                  From
                %i.fa.fa-tag.visible-xs.fa-2x{"aria-hidden" => "true"}
            .column
              .spaces
                %h4.hidden-xs Spaces
                %i.fa.fa-users.visible-xs.fa-2x{"aria-hidden" => "true"}
        %span{"ng-repeat" => "activity in activities"}
          .body-activity
            .left
              .left-picture
                =image_tag ('img-default.jpg'), width:"100%"
                .radio
                  .wrapper-checkbox
                    .checkbox-custom
                      %span
                        %input#check1{:name => "check", :type => "radio", :value => "check1"}
                        %label{:for => "check1"}

              .right-content-picture
                %p {{activity.name}}
            .right
              .count.blue-box
                %p {{activity.discount_percent}} %
              .count.black-box
                %p $ {{activity.discount_price}}
              .count.green-box
                %p 9
      .arrow-down-loadmore
        %a{:href => "javascript:void(0)"}
          %span.social-icon.chevron-down